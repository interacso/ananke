doctype html
html(lang="en")
    include head.pug

    body
        div(class="container-fluid")
            include nav.pug

        div(id="error-alert" class="alert alert-danger collapse")

        form()
            input(type="hidden" id="task-id" value=task.id)

            div(class="form-group col-md-12")
                label(for="task-name" class="col-md-2") Name
                div(class="col-md-10")
                    input(type="text" id="task-name" name="task-name" class="form-control" placeholder="Name" value=task.name)

            div(class="form-group col-md-12")
                label(for="task-desc" class="col-md-2") Description
                div(class="col-md-10")
                    textarea(class="form-control" id="task-desc" name="task-desc" placeholder="Description")=task.description

            div(class="form-group col-md-12")
                label(for="task-schedule" class="col-md-2") Schedule
                div(class="form-group col-md-6")
                    select(class="form-control" id="task-schedule" name="task-schedule")
                        each schedule in schedules
                            option(value=schedule.id selected=schedule.id==task.schedule_id)=schedule.name + ' [ ' + schedule.pattern + ' ]'
                div(class="form-group col-md-4")
                    button(class="form-control" type="button" id="manage-schedules-button" class="btn btn-default") Manage schedules

            div(class="form-group col-md-12")
                label(for="task-command" class="col-md-2") Command
                div(class="col-md-10")
                    textarea(class="form-control" id="task-command" name="task-command" placeholder="Command")=task.command

            div(class="form-group col-md-12")
                label(for="task-active" class="col-md-2") Active
                div(class="col-md-10")
                    input(type="checkbox" class="form-control" id="task-active" name="task-active" checked=task.active)

            div(class="form-group col-md-12")
                button(type="button" id="task-edit-submit" class="form-control btn btn-primary") Accept


